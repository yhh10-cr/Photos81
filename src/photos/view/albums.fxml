<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="photos.controller.AlbumsController">

    <!-- Top: user + logout -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Label fx:id="userLabel"
                       text="User Albums"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"
                       HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- Center: table of albums -->
    <center>
        <VBox spacing="10">
            <children>
                <TableView fx:id="albumTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Album Name" prefWidth="200"/>
                        <TableColumn fx:id="countColumn" text="# Photos" prefWidth="80"/>
                        <TableColumn fx:id="dateRangeColumn" text="Date Range" prefWidth="200"/>
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </center>

    <!-- Bottom: create / rename / delete / open -->
    <bottom>
        <VBox spacing="8">
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="newAlbumField"
                                   promptText="New album name"
                                   maxWidth="200"/>
                        <Button text="Create Album" onAction="#handleCreateAlbum"/>
                    </children>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="renameAlbumField"
                                   promptText="New name for selected album"
                                   maxWidth="200"/>
                        <Button text="Rename Selected" onAction="#handleRenameAlbum"/>
                        <Button text="Delete Selected" onAction="#handleDeleteAlbum"/>
                        <Button text="Open Selected" onAction="#handleOpenAlbum"/>
                    </children>
                </HBox>

                <Label fx:id="errorLabel" textFill="red"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </bottom>

</BorderPane>
