<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="photos.controller.AdminController">

    <!-- Top bar with title + logout -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Label text="Admin - User Management"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"
                       HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- Center: list of users -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <children>
                <ListView fx:id="userListView" prefWidth="300" prefHeight="250"/>

                <Label fx:id="errorLabel" textFill="red"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </center>

    <!-- Bottom: add/delete controls -->
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <TextField fx:id="newUserField"
                           promptText="New username"
                           maxWidth="200"/>
                <Button text="Add User" onAction="#handleAddUser"/>
                <Button text="Delete Selected" onAction="#handleDeleteUser"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
